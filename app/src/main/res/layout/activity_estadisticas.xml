<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danielreimundo.appgym.Estadisticas">

    <Spinner
        android:id="@+id/spinner_estadistica_spinni"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="7dp"
        android:entries="@array/ejercicios"
        app:layout_constraintLeft_toLeftOf="@+id/tv_estadistica_titulo"
        app:layout_constraintTop_toBottomOf="@+id/tv_estadistica_titulo" />

    <TextView
        android:id="@+id/tv_estadistica_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige tu rutina"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp" />

    <ListView
        android:id="@+id/listview_estadisticas"

        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinner_estadistica_spinni"
        app:layout_constraintTop_toBottomOf="@+id/spinner_estadistica_spinni" />

</android.support.constraint.ConstraintLayout>
