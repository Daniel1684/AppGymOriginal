<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danielreimundo.appgym.Estadisticas">

    <Spinner
        android:id="@+id/spinner_estadistica_spinni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/ejercicios"
        app:layout_constraintLeft_toLeftOf="@+id/tv_estadistica_titulo"
        app:layout_constraintTop_toBottomOf="@+id/tv_estadistica_titulo"
        android:layout_marginEnd="15dp"
        android:layout_alignBaseline="@+id/tv_estadistica_titulo"
        android:layout_alignBottom="@+id/tv_estadistica_titulo"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_estadistica_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:text="Elige tu rutina"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listview_estadisticas"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner_estadistica_spinni"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinner_estadistica_spinni"
        app:layout_constraintTop_toBottomOf="@+id/spinner_estadistica_spinni" />

</RelativeLayout>
